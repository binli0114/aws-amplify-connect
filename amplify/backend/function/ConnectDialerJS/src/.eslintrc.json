{
  "env": {
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
  "plugins": ["prettier", "jest", "security"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "curly": "error",
    "no-shadow": ["error", { "builtinGlobals": false, "hoist": "all" }],
    "no-var": "error",
    "node/no-unpublished-require": "off",
    "prefer-const": "error",
    "prettier/prettier": "warn"
  }
}
